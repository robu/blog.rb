<h1>Listing blogs</h1>

<table>
  <tr>
    <th>Path name</th>
    <th>Name</th>
    <th>Description</th>
  </tr>

<% for blog in @blogs %>
  <tr>
    <td><%=h blog.path_name %></td>
    <td><%=h blog.name %></td>
    <td><%=h blog.description %></td>
    <td><%= link_to 'Show', blog %></td>
    <td><%= link_to 'Edit', edit_blog_path(blog) %></td>
    <td><%= link_to 'Destroy', blog, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New blog', new_blog_path %>
