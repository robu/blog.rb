<h1>Listing posts</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Blog</th>
    <th>Published at</th>
  </tr>

<% for post in @posts %>
  <tr>
    <td><%= link_to post.title, post %></td>
    <td><%= link_to post.blog.name, post.blog %></td>
    <td><%=h post.published_at.strftime("%Y-%m-%d") %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New post', new_post_path %>
