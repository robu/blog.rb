<% form_for(@post) do |f| %>
  <%= f.hidden_field :blog_id %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body, :size => "50x8", :value => (@post.content ? @post.content.source : "") %>
  </p>
  <p>
    <%= f.label :tag_list, "Tags" %><br />
    <%= f.text_field :tag_list %>
  </p>
  <p>
    <%= f.label :published_at %><br />
    <%# = f.datetime_select :published_at %>
    <%= calendar_date_select_tag "post[published_at]", @post.published_at || Time.now, :embedded => true, :time => true %>

  </p>
  <p>
    <%= f.submit submit_text %>
  </p>
<% end %>

